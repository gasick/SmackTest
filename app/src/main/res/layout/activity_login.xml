<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Controllers.LoginActivity">

	<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:ems="10"
			android:id="@+id/loginEmailTxt" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginStart="32dp" android:layout_marginTop="32dp" android:layout_marginEnd="32dp"
			android:hint="email"/>
	<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:id="@+id/loginPasswordTxt" android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/loginEmailTxt" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="32dp" android:hint="password"/>
	<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/loginLoginBtn" android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/loginPasswordTxt" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="32dp" android:background="@color/colorPrimary" android:text="LOGIN"
			android:textColor="@android:color/white" android:onClick="loginLoginBtnClicked"/>
	<TextView
			android:text="Don't have an account?"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView"
			app:layout_constraintTop_toBottomOf="@+id/loginLoginBtn" android:layout_marginTop="56dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
	<Button
			android:text="Sign up here"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/loginCreateUserBtn" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp" android:background="@color/colorPrimary"
			android:textColor="@android:color/white" android:onClick="loginCreateUserBtnClicked"/>
</android.support.constraint.ConstraintLayout>